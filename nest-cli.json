{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true
  },
  "projects": {
    "decorators": {
      "type": "library",
      "root": "libs/decorators",
      "entryFile": "index",
      "sourceRoot": "libs/decorators/src",
      "compilerOptions": {
        "tsConfigPath": "libs/decorators/tsconfig.lib.json"
      }
    },
    "hash": {
      "type": "library",
      "root": "libs/hash",
      "entryFile": "index",
      "sourceRoot": "libs/hash/src",
      "compilerOptions": {
        "tsConfigPath": "libs/hash/tsconfig.lib.json"
      }
    },
    "pipes": {
      "type": "library",
      "root": "libs/pipes",
      "entryFile": "index",
      "sourceRoot": "libs/pipes/src",
      "compilerOptions": {
        "tsConfigPath": "libs/pipes/tsconfig.lib.json"
      }
    }
  }
}